{
	"exclude": ["node_modules", "api/**/*"],
	"compilerOptions": {
		"target": "es2017",
		"moduleResolution": "node",
		"module": "CommonJS",
		"outDir": "app/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": false
	}
}